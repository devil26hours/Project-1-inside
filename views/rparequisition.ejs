<script>



    var data;

    $(document).ready(function () {
      renderImg()
        $('#Table1').DataTable( {
            ajax: {
                url: 'http://localhost:3000/api/getrequisition',
                dataSrc: 'Result'
            },
            columns: [
                { data: 'Date' },
                { data: 'productnames' },
                { data: 'total' },
                { data: 'detail' },
                { data: 'acc' },
                { data: 'status' }
            ]
        } );
    });


    //get img
    function renderImg() {
              $.ajax({
                    method: 'get',
                    url:'http://localhost:3000/getImg',
                    success: (response) => {
                        
                        console.log('Render Img !', response)
                        if(response.resCode == 200) {
                            dataImg = response.Result;
                            if(dataImg.length > 0) {
                              var html = '';
                              for (let i = 0; i < dataImg.length; i++) {
                                html += `
                                <img class="image" src="${dataImg[i].img}" alt="">
                                
                                `;
                              }   
                              $("#Avatar").html(html)                                          
                          }
                        }
                    }, error:(err) => {
                        console.log('bad', err)
                    }
                }) 
            }


</script>